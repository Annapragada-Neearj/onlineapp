pipeline {
    agent any

    options {
        cleanWs()
    }

    tools {
        nodejs 'nodejs'
    }

    stages {

        
stage('Checkout') {
            steps {
                git branch: 'master',
                    credentialsId: 'github-creds',
                    url: 'https://github.com/Annapragada-Neearj/onlineapp.git'
            }
        }


        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Test') {
            steps {
                bat '''
                if npm run | grep -q test; then
                  npm test
                else
                  echo "No tests configured"
                fi
                '''
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }
    }
}
