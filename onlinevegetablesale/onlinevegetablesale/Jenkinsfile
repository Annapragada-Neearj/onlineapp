pipeline {
    agent any

    tools {
        jdk 'JDK 21'       // EXACT name from Jenkins
        maven 'Maven3'     // EXACT name from Jenkins
    }

    stages {
        
        stage('Checkout') {
            steps {
                git branch: 'master',
                    credentialsId: 'github-creds',
                    url: 'https://github.com/Annapragada-Neearj/onlineapp.git'
            }
        }

        stage('Build') {
            steps {
                dir('onlinevegetablesale/onlinevegetablesale') {
                    bat 'mvn clean install'
                }
            }
        }

        stage('Test Reports') {
            steps {
                junit allowEmptyResults: true,
                      testResults: '**/target/surefire-reports/*.xml'
            }
        }

        stage('Archive Jar') {
            steps {
                archiveArtifacts artifacts: 'onlinevegetablesale/onlinevegetablesale/target/*.jar',
                                  fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed. Check logs.'
        }
    }
}
