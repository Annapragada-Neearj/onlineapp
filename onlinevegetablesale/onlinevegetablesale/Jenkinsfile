pipeline {
    agent any

    tools {
        nodejs 'nodejs'   // Configure in Jenkins Global Tools
    }

    stages {

        stage('Checkout') {
    steps {
        git branch: 'master',
            credentialsId: 'github-creds',
            url: 'https://github.com/Annapragada-Neearj/onlineapp.git'
    }
}

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Test') {
            steps {
                bat 'npm test || echo "No tests found"'
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }
    }
}
